<div>
   <h1 style="color: white">Add a recipe!</h1>
  <!-- Each image is 350px by 233px -->
  <div id="photo-container" class="scrolling">
    <div class="photobanner">
      <% @recipes.each do |recipe| %>
        <!-- <a href="#" class="recipe-link" >
          <span class="recipe-title" ><%= recipe.name %></span>
          <img draggable="true" ondragstart="drag(event)" src=<%= recipe.photo %> class="recipe-photo" id="<%= recipe.id %>">
        </a> -->
        <%= link_to image_tag(recipe.photo, class: "recipe-photo"), recipe_path(recipe), remote: true, class: "recipe-link" %>
      <% end %>

      <!--
    <a href="#"><img id="1" draggable="true" ondragstart="drag(event)" class="first" src="http://www.fillmurray.com/350/233"></a>
 -->
  </div>

  <div id="showFoodLogModal">
    <%= render "show_modal" %>
  </div>


  </div>
  <div id="plan-area" class="row" >
    <h1>Today's Meals</h1>
      <% if @foodlog %>
        <% @foodlog.each do |meal| %>
        <div class="row">
          <div class="col-md-4">
          <div class="">
            <h3><%= meal.recipe.name %></h3>
            <img src="<%= meal.recipe.photo %>" alt="" class="meal-plan-image" />
          </div>
          <%= link_to "Edit Servings", foodlog_path(meal), method: :delete, class: 'edit-meal-button' %>
          <%= link_to "Remove", foodlog_path(meal), method: :delete, class: 'remove-meal-button' %>
        </div>
          <div class="col-md-8">
            <div class="col-xs-6">
              <h3>Ingredients</h3>
              <h5>(Makes <%= pluralize meal.recipe.servings, "serving" %>)</h5>
              <ul class="recipe-ingredients">
                <% meal.recipe.ingredients.split(",").each do |ingred| %>
                  <li><%= ingred %></li>
                <% end %>
              </ul>
            </div>
            <div class="col-xs-6">
              <h3>Cooking Directions</h3>
              <h5>(Makes <%= pluralize meal.recipe.servings, "serving" %>)</h5>
              <ol class='recipe-directions'>
                <% meal.recipe.directions.split("/").each do |direct| %>
                  <li><%= direct %></li>
                <% end %>
              </ol>
            </div>
            <h3><%= pluralize meal.servings, "serving" %> will total <%= meal.servings * meal.recipe.calories %> calories</h3>
          </div>
      </div>
      <hr>
        <% end %>
      <% end %>
  </div>

</div>



<div class="daily-progress">
  <div class="row">

    <div class="col-sm-9">
      <h3 style="margin: 10px 0 0 0">Calories consumed: <%= @calories %>/<%= @calorie_limit %></h3>
      <div class="progress">
        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40"
        aria-valuemin="0" aria-valuemax="100" style="width:<%= (@calories * 100 / @calorie_limit).round(1) %>%; line-height: 30px">
          <%= (@calories * 100 / @calorie_limit  ).round(1) %>%
        </div>
      </div>


    </div>
    <div class="col-sm-3">
      <h4>Calorie Composition:</h4>
      <div>
        <h5>Fats: <%= (@fats / @total * 100).round(1) %>%</h5>
      </div>
      <div>
        <h5>Carbs: <%= (@carbs / @total * 100).round(1) %>%</h5>
      </div>
      <div>
        <h5>Proteins: <%= (@proteins / @total * 100).round(1) %>%</h5>
      </div>
    </div>
  </div>
</div>
