<div class="row">

  <div class="col-sm-9">
    <h3 style="margin: 10px 0 0 0">Today's Calorie Goals: <span id="calorie-display"><%= @calories %></span>/<span id="calorie-limit"><%= @calorie_limit %></span></h3>
    <div class="progress">
      <div id="calorie-bar" class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40"
      aria-valuemin="0" aria-valuemax="100" style="width:<%= (@calories * 100 / @calorie_limit).round(1) %>%; line-height: 30px">
        <%= (@calories * 100 / @calorie_limit  ).round(1) %>%
      </div>
    </div>

  </div>
  <div class="col-sm-3">
    <div class="col-xs-7">
      <h5>Calorie Composition:</h5>
      <div>
        <h5>Fats: <span id="fats-display"><%= (@fats / @total * 100).round(1) %>%</span><div class="macro-label" id="fats-color"></div></h5>
      </div>
      <div>
        <h5>Carbs: <span id="carbs-display"><%= (@carbs / @total * 100).round(1) %>%</span><div class="macro-label" id="carbs-color"></div></h5>
      </div>
      <div>
        <h5>Proteins:
          <span id="proteins-display">
            <% if @total == 1 %>
            0.0%
            <% else %>
            <%= ((@total - @fats - @carbs) / @total * 100).round(1) %>%
            <% end %>
        </span><div class="macro-label" id="proteins-color"></div></h5>
      </div>
    </div>
    <div class="col-xs-5" id="chart_area">
      <canvas id="macros_chart" height="300px"></canvas>
    </div>
  </div>
</div>
