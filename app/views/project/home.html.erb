<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

<%= flash[:alert] %>
  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= image_tag "jumbo1.jpg", class: "carousel-image" %>
    </div>
    <div class="item">
      <%= image_tag "jumbo2.jpg", class: "carousel-image" %>
    </div>
    <div class="item">
      <%= image_tag "jumbo3.jpg", class: "carousel-image" %>
    </div>
  </div>

  <div class="carousel-caption text apply-gradient">
    <div class="section-header section-boxed">
      <h1 id="main-title">Eat Free</h1>
      <nav class="navbar">
        <div class="header-wrapper" >
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myHomeNavbar">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="collapse navbar-collapse" id="myHomeNavbar">
          <ul class="nav navbar-nav container">
            <li class="home-link"><a href="/" class="link">HOME</a></li>
            <li class="home-link"><a href="/about" class="link">ABOUT</a></li>
            <!-- <li><a href="#" class="link">RECIPES</a></li> -->
            <% if user_signed_in? %>
              <li class="home-link"><%= link_to "MEAL PLANNER", recipes_path, class: "link" %></li>
            <% else %>
              <li class="home-link"><a type="button" data-toggle="modal" data-target="#LogInModal" class="link">MEAL PLANNER</a></li>
            <% end %>
            <li class="home-link">
              <a href="#" class="dropdown-toggle link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%=  user_signed_in? ? "#{current_user.full_name.upcase}" : "PROFILE" %><span class="caret"></span></a>
              <ul class="dropdown-menu">
                <% if user_signed_in? %>
                <li><%= link_to "My Profile", new_stat_path %></li>
                <% if current_user.from_fitbit? %>
                  <li><%= link_to "Fitbit Data", stats_path, remote: true %></li>
                <% end %>
                  <li><%= link_to "View History", show_foodlog_path %></li>
                  <li><%= link_to "Sign Out", sessions_path, method: :delete %></li>
                <% else %>
                  <li>
                    <a type="button" data-toggle="modal" data-target="#LogInModal">
                      Log In
                    </a>
                  </li>
                  <li>
                    <a type="button" data-toggle="modal" data-target="#SignUpModal">
                      Sign Up
                    </a>
                  </li>
                  <li>
                    <%= link_to "Guest Login", guest_signin_path %>
                  </li>
                <% end %>
                </ul>
              </li>
            </ul>
          </div>
        </nav>

      </div>
    </div>

  </div>
</div>



